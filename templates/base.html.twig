<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="icon" href="{{ asset('img/favicon.png') }}">
    <title>{% block title %}Bucket-list{% endblock %}</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>

<header>

    <a href="{{ path('main_home') }}" title="retour à l'accueil">
    <img src="{{ asset('img/logo.png') }}">
    </a>


    <h1>Bucket-List. Faîtes la liste de vos envies</h1>
    <nav>

        {% if app.user %}
            <a href="{{ path('main_aboutus') }}" title="A propos de nous">About us</a>
            <a href="{{ path('wish_list') }}" title="liste des envies">Liste</a>
            <a href="{{ path('main_legalStuf') }}" title="Mentions légales">Législation</a>
            <a href="{{ path('wish_create') }}" title="nouveau souhait">Ajouter</a>
            <a href="{{ path('app_logout') }}" title="deconnection">Se déconnecter</a>
            <div>
               Bonjour, {{app.user.pseudo}}
            </div>
        {% else %}
            <a href="{{ path('app_login') }}" title="identification">S'identifier</a>
            <a href="{{ path('app_register') }}" title="inscription">S'incrire</a>
        {% endif %}

    </nav>
</header>
<main>

    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}

</main>

<footer>
<div>&copy; Bucket-List </div>
<div>{{  "now"|date("Y")}} </div>

</footer>

</body>
</html>
